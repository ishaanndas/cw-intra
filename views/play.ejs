<!DOCTYPE html>
<html>
    <head>       
        <% if(locals.extra.title){ %>
        <title><%= extra.title %></title>
        <% }else{ %>
        <title>Play</title>
        <% } %>
        <link rel="stylesheet" type="text/css" href="/css/navbar.css">
        <link rel="stylesheet" type="text/css" href="/css/play.css">
        <link rel="icon" href="/favicon.png">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    </head>
    <body>
        <nav>
            <span id = "navLogo" onclick="window.location = '/'">CW</span>
            <ul class = "navLinks">
                <li id = "cross"></li>
                <li><a href = "/techathlon/">About</a></li>
                <li  id = "selectedLink"><a href = "#">Play</a></li>
                <li><a href = "/techathlon/leaderboard">Leaderboard</a></li>
                <li><a href = "https://discord.gg/qDTs6vT" target="_blank">Discord</a></li>
                <li id = "logoutImg"><img src = "/images/logout.png"></li>
                <li id = "logoutText"><a href = "/techathlon/logout">Log out</a></li>
            </ul>
            <div id="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </nav>
        <div class="container">
            <span id = "title"><%= title %></span>
            <span id = "content"><%= content  %></span>
            
            <% if(locals.extra.image){ %>
                <a href=<%= extra.image %> download>
                    <img src=<%= extra.image %> alt="W3Schools">
                </a>
            <% } %>

            <form action = "/play" method="POST">
                <input type="text" placeholder="Answer" name="answer" autocomplete="off">
                <input type="submit">
            </form>
            
        </div>
        <script>
            const burger = document.getElementById("hamburger");
            const cross = document.getElementById("cross");
            const nav = document.querySelector(".navLinks");
            const navLinks = document.querySelectorAll(".navLinks li a");

            burger.addEventListener("click",() => {

                nav.classList.add("nav-active");
                navLinks.forEach(function(link,index){
                    link.style.opacity = 0;
                    link.style.animation = `navLinkFade 0.5s ease forwards ${index/12+0.1}s`;
                });
            });
            cross.addEventListener("click",() => {
                nav.classList.remove("nav-active");
                navLinks.forEach(function(link,index){
                    link.style.animation = "";
                    link.style.opacity = 1;
                });
            });
        </script>
    <% if(locals.extra.comment){ %>
        <!--
            <%= extra.comment %>
        -->
    <% } %>
    </body>
</html>